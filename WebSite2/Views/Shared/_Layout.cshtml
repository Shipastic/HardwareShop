<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" media="screen">
    @*<link rel="stylesheet" href="~/assets/css/custom.min.css" />*@


    @*<script type="text/javascript" src="~/jquery/jquery-1.8.1.js"></script>*@
    @*<script src="https://code.jquery.com/jquery-1.12.4.min.js"
            integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="
            crossorigin="anonymous"></script>*@
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    @*<script type="text/javascript" src="~/js/Script.js"></script>*@
    <link rel="stylesheet" href="~/css/Style.css">

</head>
<body>

    <div class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                @*Использование тэг-хелперов - указываем название контроллера  и название метода*@
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Главная</a>
            </div>

            <div class="collapse navbar-collapse " id="navbar-main">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#!">Войти</a></li>
                            <li><a href="#!">Зарегистрироваться</a></li>
                            <li class="dropdown-divider"></li>
                            <li><a asp-controller="Products" asp-action="ProductList">Каталог товаров</a></li>
                            <li><a asp-controller="Products" asp-action="ProductListView">Каталог товаров дополнительный</a></li>
                        </ul>
                    </li>
                    <li><a href="/ShopProduct/">Корзина</a></li>
                    <li><a href="https://iris-retail.ru/">IRIS-RETAIL</a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#!">Войти</a>
                    </li>
                    <li>
                        <a href="#!">Зарегистрироваться</a>
                    </li>
                </ul>
            </div>


        </div>
    </div>
    <div class="container">

        <div class="bs-docs-section">
            <!-- Sidebar-->
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-5">
                    <nav>
                        <div class="item">
                            <input type="checkbox" id="check1" >
                            <label for="check1">Комплектующие</label>
                            <ul>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Процессоры">Процессоры</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Материнские+платы">Материнские платы</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Видеокарты">Видеокарты</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Жесткие+диски">Жесткие диски</a></li>
                            </ul>
                        </div>
                        <div class="item">
                            <input type="checkbox" id="check2">
                            <label for="check2">Ноутбуки и ПК</label>
                            <ul>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Ноутбуки">Ноутбуки</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Материнские+платы">Нетбуки</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Компьютер/Неттоп">Персональные компьютеры</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Планшеты">Планшеты</a></li>
                            </ul>
                        </div>
                        <div class="item">
                            <input type="checkbox" id="check3">
                            <label for="check3">Периферийное оборудование</label>
                            <ul>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Принтер/Плоттер">Принтеры</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Сканер">Сканеры</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=МФУ">МФУ</a></li>
                            </ul>
                        </div>
                        <div class="item">
                            <input type="checkbox" id="check4">
                            <label for="check4">Оргтехника и зап.части</label>
                            <ul>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Картриджи">Картриджи</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Картриджи">Тонеры</a></li>
                                <li><a href="Products/ProductListView?nameProductSearch=&groups=Картриджи">Фотобарабаны</a></li>
                            </ul>
                        </div>
                    </nav>
                </div>
                <div class="col-lg-8 col-md-7 col-sm-6">
                    <div class="bs-component">
                        @RenderBody()
                    </div>
                </div>
                <div class="col-lg-3 col-md-4 col-sm-5">
                    <nav>
                        <div class="item">
                            Группа фильтров ТУТА    
                                @await Component.InvokeAsync("Timer")
                            @*@await Component.InvokeAsync("Timer", new { category = text })*@
                        </div>
                    </nav>
                </div>

            </div>
        </div>
        @if (IsSectionDefined("footer"))
        {
            @RenderSection("Footer")
        }
        else
        {
            <footer>
                Прописать подвал по умолчанию.
            </footer>
        }
        <!-- Вставляем частичное представление смарт-фильтра -->
    </div>
    @*<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>*@
    <script src="~/js/bootstrap.min.js"></script>
    @*<script src="~/assets/js/custom.js"></script>*@
    <script>
        var ajaxHelper = {
            postForm: function (form, updateElement) {
                var jsData = $(form).serialize();
                $.ajax({ type: "POST", url: 'ProductsController/ProductListView?nameProduct=' + jsData.nameProduct + '&group=' + jsData.group + '' }).done(function (data) {
                    $(updateElement).html(data);
                });
            }
        }
    </script> 
    <script type="text/javascript">
        function name_checkBox()
        {
            var text = $('label[for=check1]').text();
        }
        </script>
</body>
</html>
